<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weng.ssm.blog.mapper.ArticleCategoryRefMapper">
    <resultMap id="BaseResultMap" type="articleCategoryRef">
        <result column="article_id" property="articleId"/>
        <result column="category_id" property="categoryId"/>
    </resultMap>
    <insert id="insert" parameterType="int">
        insert into article_category_ref(article_id, category_id)
                    values(#{articleId},#{categoryId})
    </insert>

    <delete id="deleteByCategoryId" parameterType="int">
        delete from article_category_ref where category_id=#{id}
    </delete>

    <delete id="deleteByArticleId" parameterType="int">
        delete from article_category_ref where article_id=#{id}
    </delete>

    <select id="countArticleByCategoryId" parameterType="int" resultType="int">
        select count(*) from article_category_ref where category_id=#{id}
    </select>

    <select id="selectCategoryIdByArticleId" parameterType="int" resultType="int">
        select category_id from article_category_ref where article_id=#{id}
    </select>

    <select id="selectArticleIdByCategoryId" parameterType="int" resultType="int">
        select article_id from article_category_ref where category_id=#{id}
    </select>

    <select id="listCategoryByArticleId" parameterType="int"
            resultType="category">
        SELECT
            category.category_id, category.category_pid, category.category_name
        FROM category, article_category_ref
        WHERE article_category_ref.article_id = #{value} AND
            article_category_ref.category_id = category.category_id
        ORDER BY category.category_pid asc
    </select>
</mapper>